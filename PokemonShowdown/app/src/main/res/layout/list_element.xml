<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="#FEF1E5"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="to do"
            app:srcCompat="@drawable/p003" />

        <TextView
            android:id="@+id/mov_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/cd"
            android:text="Guillotina"
            android:textColor="#94000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mov_accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="28dp"
            android:text="Mucha"
            android:textColor="#94000000" />

        <TextView
            android:id="@+id/mov_dmg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mov_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="21dp"
            android:text="TextView" />

        <ImageView
            android:id="@+id/mov_type"
            android:layout_width="78dp"
            android:layout_height="22dp"
            android:layout_below="@+id/mov_name"
            android:layout_marginStart="35dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/cd"
            app:srcCompat="@drawable/p003" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>